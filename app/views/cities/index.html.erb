<% content_for(:title, name == '' ? 'Seach cities' : "Search cities named '#{name}'") %>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Cities</li>
</ol>

<h1>Cities</h1>

<p>
  <% if page > 1 %>
    Page <%= page %> of
  <% end %>
  <%= pluralize(cities.total_count, 'city') %>
</p>

<% if cities.count > 0 %>
  <ul>
    <% cities.to_a.each do |city| # FIXME: order is lost without 'to_a' %>
      <li><%= link_to(city.title, city) %></li>
    <% end %>
  </ul>
<% end %>

<%= paginate cities %>

<hr>

<h2>Search</h2>

<%= render 'form_city' %>

<hr>

<p>
  Source:
  <%= link_to('GeoNames Gazetteer', 'http://download.geonames.org/export/dump/')%>
</p>
