<% content_for(:title, name == '' ? 'Seach cities' : "Search cities named '#{name}'") %>

<ol class="breadcrumb">
  <li><%= link_to(t(:home), root_path) %></li>
  <li class="active"><%= t(:cities).capitalize %></li>
</ol>

<h1><%= t(:cities).capitalize %></h1>

<p>
  <% if page > 1 %>
    Page <%= page %> of
  <% end %>
  <%= pluralize(cities.total_count, t(:city)) %>
</p>

<% if cities.count > 0 %>
  <ul>
    <% cities.to_a.each do |city| # FIXME: order is lost without 'to_a' %>
      <li><%= link_to(city.title, city) %></li>
    <% end %>
  </ul>
<% end %>

<%= paginate cities %>

<hr>

<h2><%= t(:search) %></h2>

<%= render 'form_city' %>

<hr>

<p>
  Source:
  <%= link_to('GeoNames Gazetteer', 'http://download.geonames.org/export/dump/')%>
</p>
