<div class="row map-wrapper">
  <div class="col-sm-4" id="legend">
    <h1>Cities</h1>

    <ul>
      <% cities.each do |city| %>
        <li><%= link_to(city.title, city) %></li>
      <% end%>
    </ul>

    <hr>

    <h2>Search</h2>
    <%= simple_form_for self, as: 'search', url: cities_path, method: :get do |f| %>
      <%= f.input :name, required: false %>

      <%= f.button :submit, 'Search' %>
    <% end %>

    <hr>
  </div>

  <div class="col-sm-8" id="map">
    <script>
      genMap(<%= cities.map { |city| { city: city } }.to_json.html_safe %>);
    </script>
  </div>
</div>
